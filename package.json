{
  "name": "call-for-cofounder-investor",
  "version": "1.0.0",
  "description": "Call for Investor/CoFounder Mobile Web App",
  "private": true,
  "engines": {
    "node": ">=20.19.0"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"blue,green\" \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "start": "concurrently -n \"BACKEND,FRONTEND\" -c \"blue,green\" \"npm start --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "start:prod": "npm start --workspace=backend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "install:all": "npm install",
    "kill-port": "node scripts/kill-port.js",
    "kill-port:3000": "node scripts/kill-port.js 3000",
    "kill-port:5173": "node scripts/kill-port.js 5173",
    "test:smoke": "npm run build --workspace=frontend",
    "test:unit": "node -e \"console.log('No unit tests configured yet.')\"",
    "test:e2e": "playwright test --config .config/playwright.config.js",
    "test:e2e:ui": "playwright test --ui --config .config/playwright.config.js",
    "lighthouse": "lhci autorun",
    "audit:check": "npm audit",
    "audit:fix": "npm audit fix",
    "docker:build": "docker build -f .config/Dockerfile -t callforcofounder-investor:latest .",
    "docker:push": "docker push callforcofounder-investor:latest",
    "container:build": "bash scripts/build-and-push-container.sh",
    "container:build:win": "powershell -ExecutionPolicy Bypass -File scripts/build-and-push-container.ps1"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "concurrently": "^8.2.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
